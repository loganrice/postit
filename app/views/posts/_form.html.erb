
<!-- Takes an object and determines where to 
submit to and what the method is -->
<h4>Rails model-backed form helpers</h4>

<% if @post.errors.any? %>
<div class="row">
  <div class="alert alert-error span8">
    <h5> There were some errors</h5>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="well">
  <%= form_for @post do |f| %>
  <div class="control-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="control-group">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="control-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
  </div>
    <br/>
    <%= f.submit(@post.new_record? ? "Create Post" : 'Update Post', class:"btn btn-primary") %>
  <% end %>
</div>