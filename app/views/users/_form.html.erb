<div class="well">
  <%= form_for @user do |f| %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div class="control-group">
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  </div>
    <% if @user.new_record? %>
      <% btn_txt = "Register" %>
    <% else %>
      <% btn_txt = "Update" %>
    <% end %>
    
    <%= f.submit( btn_txt, class:"btn btn-primary") %>
  <% end %>

</div>